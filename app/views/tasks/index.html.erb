<h1 class="text-2xl font-bold mb-4">Tasks</h1>

<div class="flex gap-3 mb-5">
  <%= link_to "My Tasks", tasks_path, data: { turbo_frame: "tasks_container", turbo_action: "advance", turbo_method: 'get', class: 'active:bg-blue-500' } %>
  <%= link_to "Due Soon", tasks_path(filter: "due_soon"), data: { turbo_frame: "tasks_container", turbo_action: "advance", turbo_method: 'get', class: 'active:bg-blue-500' } %>
</div>

<%= turbo_frame_tag "tasks_container" do %>
  <div id="task_cards" class="flex flex-col gap-y-8">
    <%= render @tasks %>
  </div>
  <% if params[:filter].blank? %>
    <hr />
    <%= render partial: "form", locals: { task: @task } %>
  <% end %>
<% end %>
